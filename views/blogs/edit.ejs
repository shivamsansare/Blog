<%- include('../partials/header'); -%>

<div class=container">

    <h1 style="text-align:center">Update Blog <%= blog.name %></h1>
    <div style="width:30%; margin:25px auto">
        <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="blog[name]" value="<%= blog.name %>">
            </div>
            <div class="form-group">
                <input  class="form-control" type="text" name="blog[image]" value="<%= blog.image %>">
            </div>
            <div class="form-group">
                <textarea class="form-control" type="text" name="blog[description]" placeholder="description" Required cols="50" rows="10"><%= blog.description %></textarea>
            </div>
            <div class="form-group">
                <button  class="btn btn-lg btn-primary btn-block" >Update</button>
            </div>
        </form>
        <a href="/blogs">Go back</a>
    </div>
</div>

<%- include('../partials/footer'); -%>